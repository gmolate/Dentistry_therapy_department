@model Dentistry.Models.AddJournalViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>AddJournalViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            @Html.DropDownListFor(m => m.DoctorId, Model.Doctors.Select(x => new SelectListItem($"{x.FirstName} {x.SecondName}", x.DoctorId.ToString())))
            <br />
            @Html.DropDownListFor(m => m.ProcedureId, Model.Procedures.Select(x => new SelectListItem($"{x.Name}", x.ProcedureId.ToString())))
            <br />
            @Html.DropDownListFor(m => m.MedRecordId, Model.MedRecords.Select(x => new SelectListItem($"{x.FirstName} {x.SecondName}", x.MedRecordId.ToString())))
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
