@model IEnumerable<Dentistry.Models.MedRecordViewModel>

@{
    ViewData["Title"] = "Clients";
}

<h1>Report: Clients</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Client name
            </th>
            <th>
                Client surname
            </th>
            <th>
                Day of birth
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            @*@if (DateTime.Now.Year - item.DOB.Year < 18)*@
            @if (item.DOB.AddYears(18) > DateTime.Now)
            {
                <tr>
                    <td>
                        <span style="color: red">
                            @(item.FirstName)
                        </span>
                    </td>
                    <td>
                        <span style="color: red">
                            @(item.SecondName)
                        </span>
                    </td>
                    <td>
                        <span style="color: red">
                            @Html.DisplayFor(modelItem => item.DOB)
                        </span>
                    </td>
                </tr>

            }
            else
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SecondName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DOB)
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
