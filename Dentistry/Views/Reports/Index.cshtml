@model IEnumerable<Dentistry.Models.ProcedureTotalPriceViewModel>

@{
    ViewData["Title"] = "Отчет";
    var sum = 0;
}

<h1>Отчет</h1>

<input class="form-control" />
<button onclick="if (!window.find(this.previousElementSibling.value, false, false, false, false, false)) window.getSelection().empty()">Find next</button>
<table class="table">
    <thead>
        <tr>
            <th>
                Имя
            </th>
            <th>
                Фамилия
            </th>
            <th>
                Имя процедуры
            </th>
            <th>
                Цена
            </th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MedRecord.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MedRecord.SecondName)
                </td>
                <th>
                    @Html.DisplayFor(modelItem => item.Procedure.Name)
                </th>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
            </tr>
            @sum = sum + item.Price;
        }
</tbody>
</table>
